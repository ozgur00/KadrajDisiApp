<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/recycler_item_margin">

    <ImageView
        android:id="@+id/post_imageview_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thumbnail_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/post_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView.Medium.Bold"/>

        <TextView
            android:id="@+id/post_textview_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            style="@style/TextView.Small"/>
    </LinearLayout>

    <TextView
        android:id="@+id/post_textview_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        style="@style/TextView.Small"/>

</LinearLayout>