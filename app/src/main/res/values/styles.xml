<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextView" parent="android:Widget.TextView" >
        <item name="fontPath">@string/font_name</item>
    </style>

    <style name="TextView.Small">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="TextView.Detail">
        <item name="android:textSize">@dimen/detail_text</item>
    </style>

    <style name="TextView.Medium">
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="TextView.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Large">
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="TextView.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
